#!/bin/bash

toggle_menu() {
  if [[ $(eww active-windows | grep launcher) ]]; then
    eww close launcher
  fi
  eww open --toggle menu
}

toggle_launcher() {
  if [[ $(eww active-windows | grep menu) ]]; then
    eww close menu
  fi

  eww open --toggle launcher
  ~/.config/eww/scripts/apps.py --query
}

toggle_bar() {
  eww open --toggle bar
}

case $1 in
--menu)
  toggle_menu
  ;;
--launcher)
  toggle_launcher
  ;;
--bar)
  toggle_bar
  ;;
esac
